---
import Navbar from "@components/sections/navbar&footer/Navbar.astro";
import Header from "@/components/admin/Header.astro";
import Sidebar from "@/components/admin/Sidebar.astro";
import 'simple-notify/dist/simple-notify.css';


const {title, lang = 'es'} = Astro.props

interface Props {
  title?: string;
  lang?: string
}

---

<html lang={lang} class="scrollbar-hide lenis lenis-smooth scroll-pt-16">
  <head>
    <title>{title}</title>
    
    <script is:inline>
      if (
        localStorage.getItem("hs_theme") === "dark" ||
        (!("|" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
    <script>
      import 'preline/preline';
      import "@scripts/lenisSmoothScroll.js";
    </script>
  </head>
  <body class="bg-neutral-200 selection:bg-yellow-400 selection:text-neutral-700 dark:bg-neutral-800">
    <!-- Estructura principal de la pÃ¡gina -->
    <Header />
    <div class="flex">
      <Sidebar/>
      <main>
        <slot />
      </main>
    </div>
    <style>
      .scrollbar-hide::-webkit-scrollbar {
        display: none;
      }
      .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }
    </style>
  </body>
</html>

